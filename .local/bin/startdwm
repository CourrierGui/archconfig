# relaunch DWM if the binary has changed

csum=$(sha1sum $(which dwm))

dwm 2>> .config/dwm/log.txt
new_csum="$(sha1sum $(which dwm))"

while true
do
  if [ "$csum" != "$new_csum" ]
  then
    csum=$new_csum
    dwm 2>> .config/dwm/log.txt
  else
    exit 0
  fi
  new_csum=$(sha1sum $(which dwm))
  sleep 0.5
done
