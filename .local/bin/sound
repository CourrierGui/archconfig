#!/bin/bash

function notify_dwmblocks()
{
    pidof_dwmblocks=$(pidof dwmblocks)
    if [ ! -z "$pidof_dwmblocks" ]
    then
        kill -44 $pidof_dwmblocks
    fi
}

function inc_sound()
{
    amixer -c 0 set PCM $1+ &>/dev/null
    notify_dwmblocks
}

function dec_sound()
{
    amixer -c 0 set PCM $1- &>/dev/null
    notify_dwmblocks
}

function toggle_sound()
{
    amixer set Master toggle &>/dev/null
    notify_dwmblocks
}

function get_sound()
{
    amixer -c 0 -M get PCM | awk -F"[][]" '/Front Left:/ { print $2 }'
}

function set_sound()
{
    amixer -c 0 set PCM $1 &>/dev/null
}

function usage()
{
    echo "\
sound <cmd> [args...]

cmd:
    inc <value>: increase sound by <value> percent
    dec <value>: decrease sound by <value> percent
    toggle:      toggle sound
    get:         get the sound volume in %
    set:         set the sound to the given value
    help:        show this message"
}

case "$1" in
    inc)    inc_sound "$2" ;;
    dec)    dec_sound "$2" ;;
    toggle) toggle_sound   ;;
    help)   usage          ;;
    get)    get_sound      ;;
    set)    set_sound "$2" ;;
    *)      usage          ;;
esac
