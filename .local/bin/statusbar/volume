#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

function usage()
{
	notify-send \
		"ðŸ“¢ Volume module" \
		"\
\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." 
}

case $BUTTON in
	1) setsid -f "$TERMINAL" -e alsamixer & ;;
	2) sound toggle ;;
	3) usage ;;
	4) sound dec 5% ;;
	5) sound inc 5% ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

volstat="$(amixer get Master)" # ALSA only equivalent.

echo "$volstat" | grep "\[off\]" >/dev/null && printf "ðŸ”‡    \\n" && exit

vol=$(echo "$volstat" | grep -o "\[[0-9]\+%\]" | sed "s/[^0-9]*//g;1q")

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s %s" "$icon" "$vol"
