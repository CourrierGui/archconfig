#!/bin/sh

xrdb -merge -I$HOME ~/.config/Xresources
dwmblocks &
dunst &
xcompmgr &
remaps &
battery_signal &

if [ -f ~/.config/wall.png ];
then
  xwallpaper --zoom ~/.config/wall.png &
elif [ -f ~/.config/default.png ];
then
  setbg ~/.config/default.png &
else
  notify-send --warn "No wallpaper" &
fi
